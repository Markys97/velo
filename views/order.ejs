<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <title>Document</title>
</head>
<body class="velo-order">
    <header class="header">
        <div class="header__container">
                <a href="/">   мои велосипеды</a>
        </div>
        
    </header>
    <section class="order">
        <div class="order__container">
           <div class="order__row">
                <div class="order__img">
                    <% data.forEach(item=>{%>
                        <img src="/img/velo/<%= item.imgVelo%>" alt="">
                    <%})%>
                </div>
                <div class="order__body">
                    <div class="order__time">
                        <div class="order__time-chrono">
                            <span class="order__time-chrono-title">Время</span>
                            <span class="order__heure">00</span>
                            <span class="order__minute">00</span>
                            <span class="order__second">00</span>
                        </div>

                    </div>
                    <div class="order__price"> 
                        <span class="order__price-title">цена</span>
                        <span class="order__price-number">0</span> <b>$</b>
                    </div>
                </div>
           </div>
           <div class="order__buttons">
               <button class="order__btn order__btn--on">
                    начинать
               </button>
               <button class="order__btn order__btn--off">
                    завершить
               </button>
           </div>

        </div>
    </section>

    <footer class="footer">
        <div class="footer__container">
            Max Ryabtsev
        </div>
    </footer>
    <script src="/js/order.js"></script>
</body>
</html>